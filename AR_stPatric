<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    const targets = {
        "1": { name: "徳丸1丁目", lat: 35.7725, lng: 139.6615, url: "#" },
        "2": { name: "東京駅", lat: 35.6812, lng: 139.7671, url: "#" },
        "3": { name: "新宿", lat: 35.6924, lng: 139.6971, url: "#" },
        "4": { name: "地点4", lat: 35.7000, lng: 139.7000, url: "#" },
        "5": { name: "地点5", lat: 35.7100, lng: 139.7100, url: "#" },
        "6": { name: "地点6", lat: 35.7200, lng: 139.7200, url: "#" },
        "7": { name: "地点7", lat: 35.7300, lng: 139.7300, url: "#" },
        "8": { name: "地点8", lat: 35.7400, lng: 139.7400, url: "#" },
        "9": { name: "地点9", lat: 35.7500, lng: 139.7500, url: "#" },
        "10": { name: "ゴール", lat: 35.7600, lng: 139.7600, url: "#" }
    };

    let map, userMarker;
    let markers = {};

    // 地図の初期化
    function initMap() {
        // 最初の地点を中心に表示
        map = L.map('map').setView([targets["1"].lat, targets["1"].lng], 13);
        
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap'
        }).addTo(map);

        // 各スポットにマーカーを設置
        for (let id in targets) {
            const t = targets[id];
            const marker = L.marker([t.lat, t.lng], {
                icon: L.divIcon({
                    className: 'custom-marker',
                    html: '⚪', // 初期は白い丸
                    iconSize: [30, 30]
                })
            }).addTo(map).bindPopup(t.name);
            markers[id] = marker;
        }

        // ユーザーの現在地表示用マーカー
        userMarker = L.circleMarker([0, 0], { color: 'blue', radius: 8 }).addTo(map);
    }

    // スタンプグリッドの生成
    const grid = document.getElementById('stamp-grid');
    for (let i = 1; i <= 10; i++) {
        const div = document.createElement('div');
        div.id = `stamp-${i}`;
        div.className = 'stamp';
        div.innerHTML = `<span style="font-size:12px">${targets[i].name}</span>`;
        grid.appendChild(div);
